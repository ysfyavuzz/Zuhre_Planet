# ==========================================
# Environment Variables Template
# ==========================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local or .env files with real credentials
# ==========================================

# ==========================================
# APPLICATION
# ==========================================
VITE_APP_NAME=Escort Platform
VITE_APP_URL=http://localhost:3000
VITE_APP_ENV=development

# ==========================================
# DATABASE (LibSQL/Turso)
# ==========================================
DATABASE_URL=file:local.db
# For production:
# DATABASE_URL=libsql://your-db.turso.io
# TURSO_AUTH_TOKEN=your-turso-auth-token

# ==========================================
# API
# ==========================================
VITE_API_URL=http://localhost:3000/api

# ==========================================
# API KEYS
# ==========================================
# Google Maps (optional - for location features)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-key

# Image upload service (Cloudinary, AWS S3, etc.)
VITE_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud
VITE_CLOUDINARY_UPLOAD_PRESET=your-upload-preset
VITE_CLOUDINARY_API_KEY=your-cloudinary-key

# ==========================================
# PAYMENT (iyzico)
# ==========================================
VITE_IYZICO_API_KEY=your-iyzico-api-key
VITE_IYZICO_SECRET_KEY=your-iyzico-secret-key
VITE_IYZICO_BASE_URL=https://api.iyzipay.com

# ==========================================
# EMAIL (SMTP / NodeMailer)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=Escort Platform

# ==========================================
# AUTHENTICATION (JWT)
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ==========================================
# SMS (Optional - for OTP/Notifications)
# ==========================================
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=YourSenderID

# ==========================================
# ANALYTICS & MONITORING
# ==========================================
# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager
VITE_GTM_ID=GTM-XXXXXXXX

# Sentry (Error tracking)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production

# ==========================================
# SOCIAL LOGIN (Optional)
# ==========================================
# Google OAuth
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_GOOGLE_CLIENT_SECRET=your-google-client-secret
VITE_GOOGLE_OAUTH_CALLBACK_URL=https://your-domain.com/auth/google/callback

# Facebook OAuth
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_FACEBOOK_APP_SECRET=your-facebook-app-secret
VITE_FACEBOOK_OAUTH_CALLBACK_URL=https://your-domain.com/auth/facebook/callback

# ==========================================
# STORAGE (AWS S3 / Cloudflare R2)
# ==========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=your-bucket-name
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# ==========================================
# REDIS (Optional - for caching/sessions)
# ==========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# ==========================================
# WEBSOCKET (Real-time features)
# ==========================================
VITE_WS_URL=wss://your-domain.com
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# ==========================================
# FEATURES FLAGS
# ==========================================
VITE_ENABLE_AGE_VERIFICATION=true
VITE_ENABLE_PAYMENT=true
VITE_ENABLE_VIDEO_CALLS=true
VITE_ENABLE_MESSAGING=true
VITE_ENABLE_BLOG=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_VERIFICATION=true

# ==========================================
# RATE LIMITING
# ==========================================
VITE_RATE_LIMIT_LOGIN_ATTEMPTS=5
VITE_RATE_LIMIT_LOGIN_WINDOW=60000
VITE_RATE_LIMIT_CONTACT_ATTEMPTS=3
VITE_RATE_LIMIT_BOOKING_ATTEMPTS=10

# ==========================================
# CONTENT MODERATION
# ==========================================
VITE_ENABLE_PROFANITY_FILTER=true
VITE_ENABLE_AUTO_MODERATION=true
VITE_MODERATION_API_KEY=your-moderation-api-key

# ==========================================
# SEO & METADATA
# ==========================================
VITE_SITE_NAME=Escort Platform
VITE_SITE_DESCRIPTION=Türkiye'nin en güvenilir escort platformu
VITE_SITE_KEYWORDS=escort, masaj, masöz
VITE_TWITTER_HANDLE=@yourplatform
VITE_OG_IMAGE=https://your-domain.com/og-image.jpg

# ==========================================
# SUPPORT
# ==========================================
VITE_SUPPORT_EMAIL=support@your-domain.com
VITE_SUPPORT_PHONE=+905551234567
VITE_SUPPORT_WHATSAPP=905551234567

# ==========================================
# ADMIN
# ==========================================
VITE_ADMIN_EMAIL=admin@example.com

# ==========================================
# DEVELOPMENT (Only in dev mode)
# ==========================================
VITE_DEBUG=false
VITE_LOG_LEVEL=info
VITE_MOCK_API=false
VITE_DISABLE_AUTH=false
