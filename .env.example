# Veritabanı Ayarları
DB_USER=zuhre_user
DB_PASSWORD=your_strong_db_password
DB_NAME=zuhre_db

# Uygulama Ayarları
PORT=3000
VITE_APP_NAME=Zuhre Planet
JWT_SECRET=your_super_secret_jwt_key_here # JWT tokenları için güçlü bir anahtar

# Frontend URL (CORS için)
# Üretim ortamında gerçek domaininizi veya IP adresinizi girin
VITE_API_URL=http://localhost:3000/api
VITE_WS_URL=ws://localhost:3000

# Frontend için diğer Vite değişkenleri
VITE_ENABLE_AGE_VERIFICATION=true

# --- Üretim Ortamı İçin (.env.production'a kopyalanacak) ---
# Domain ve HTTPS ayarları
# DOMAIN_NAME=yourdomain.com
# VITE_API_URL=https://yourdomain.com/api
# VITE_WS_URL=wss://yourdomain.com/ws